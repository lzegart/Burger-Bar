<div class="jumbotron text-center">
    <h1>Burger Bar</h1>
    <img src="/assets/images/burger-img.png" alt="burger-img">
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Burgers</h2>
        <ul id="burgersList">
            {{#each burger_data}}
            {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="btn btn-danger devourBtn" data-id="{{id}}">Devour It!!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Devoured Burgers</h2>
        <ul id="devouredList">
            {{#each burger_data}}
            {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div>
    <h2>Create a Burger</h2>
    <form id="create-form">
        <div class="form-group">
            <input type="text" id="burger-input" name="name" placeholder="Enter burger here...">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>